#!/bin/bash

MODE="$1"
TARGET="$2"

if [[ "$1" = "" ]]; then
    sudo bash /opt/gem/update.sh
    exit 0
fi

if [[ "$1" = "install" ]]; then
    sudo bash /opt/gem/install.sh $TARGET
    exit 0
fi

if [[ "$1" = "pac" ]]; then
    sudo bash /opt/gem/pac.sh "${@:2}"
    exit 0
fi

sudo bash /opt/gem/gems/$TARGET $MODE