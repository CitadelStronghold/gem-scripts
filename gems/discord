#!/bin/bash

CONFIG_FOLDER="$HOME/.config"
CONFIG="$CONFIG_FOLDER/discord-flags.conf"

if [[ $1 = "r" ]]; then
    rm -f $CONFIG
    yay -R discord_arch_electron

    exit 0
fi

yay -S discord_arch_electron

mkdir -p $CONFIG_FOLDER
echo "--ozone-platform=wayland" | tee $CONFIG

echo "[gem] [discord]"