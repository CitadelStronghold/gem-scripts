#!/bin/bash

DEPS="keyd"

REMAPPER_CONFIG_EXT_FOLDER="/opt/gem/ext/keyd.conf"
REMAPPER_CONFIG_PATH="/etc/keyd/default.conf"

if [[ $1 = "r" ]]; then
    gem aur R $DEPS

    exit 0
fi

gem aur S $DEPS

sudo systemctl enable keyd

cp -rf $REMAPPER_CONFIG_EXT_FOLDER $REMAPPER_CONFIG_FOLDER

sudo systemctl restart keyd
