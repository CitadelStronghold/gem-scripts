#!/bin/bash

DEPS="git neovim helix which tree ninja cmake make wget unzip fuse2 base-devel cargo jq xorg-xeyes rsync"
DEPS_AUR="downgrade"

WORK_FOLDER="$HOME/work"
PARU_FOLDER="$HOME/downloads/paru"

gem pac S $DEPS

mkdir -p $WORK_FOLDER
git config --global credential.helper store

git clone https://aur.archlinux.org/paru.git $PARU_FOLDER
cd $PARU_FOLDER
makepkg -si
cd $HOME
rm -rf $PARU_FOLDER
paru

gem aur S $DEPS_AUR
