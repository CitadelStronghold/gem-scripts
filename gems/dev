#!/bin/bash

DEPS="git neovim helix which tree ninja cmake make wget unzip fuse2 base-devel cargo"

WORK_FOLDER="$HOME/work"
PARU_FOLDER="$HOME/downloads/paru"

if [[ $1 = "r" ]]; then
    gem pac R $DEPS
    gem pac R paru

    exit 0
fi

gem pac S $DEPS

mkdir -p $WORK_FOLDER
git config --global credential.helper store

git clone https://aur.archlinux.org/paru.git $PARU_FOLDER
cd $PARU_FOLDER
makepkg -si
cd $HOME
rm -rf $PARU_FOLDER
paru
