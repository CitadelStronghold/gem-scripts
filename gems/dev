#!/bin/bash

DEPS="git neovim helix which tree ninja cmake make wget unzip fuse2 base-devel"

WORK_FOLDER="$HOME/work"
YAY_FOLDER="$HOME/downloads/yay"

if [[ $1 = "r" ]]; then
    gem pac R $DEPS
    gem pac R yay

    exit 0
fi

mkdir -p $WORK_FOLDER

gem pac S $DEPS

git config --global credential.helper store

git clone https://aur.archlinux.org/yay.git $YAY_FOLDER
cd $YAY_FOLDER
makepkg -si
cd $HOME
rm -rf $YAY_FOLDER
yay
