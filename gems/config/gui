#!/bin/bash

CONFIG_DIR="$HOME/.config"

HYPR_CONFIG_DIR="$CONFIG_DIR/hypr"
HYPR_CONFIG="$HYPR_CONFIG_DIR/hyprland.conf"
HYPR_PAPER_CONFIG="$HYPR_CONFIG_DIR/hyprpaper.conf"
HYPR_WALLPAPERS_DIR="/opt/wall"
HYPR_DEFUALT_WALLPAPER="$HYPR_WALLPAPERS_DIR/default.jpg"

FONTS_INSTALL_DIR="/usr/share/fonts"
FONTS_DIR="$HOME/fonts"
FONTS_GLYPHS_DIR="$HOME/fonts/glyphs"
IOSEVKA_ZIP_NAME="iosevka.zip"
IOSEVKA_ZIP="$FONTS_DIR/$IOSEVKA_ZIP_NAME"
IOSEVKA_TTC="iosevka.ttc"
IOSEVKA_GLYPHS_TTC="*"

FOOT_CONFIG_DIR="$CONFIG_DIR/foot"
FOOT_CONFIG="$FOOT_CONFIG_DIR/foot.ini"

ROFI_CONFIG_DIR="$HOME/.config/rofi"
ROFI_CONFIG="$ROFI_CONFIG_DIR/config.rasi"

##

if [[ $1 = "r" ]]; then
    exit 0
fi

##

mkdir -p $HYPR_CONFIG_DIR
echo "[gem] [config] [hyprland] Targeting $HYPR_CONFIG"
cp /opt/gem/ext/hyprland.config.default $HYPR_CONFIG

echo "[gem] [config] [hyprpaper]"
cp /opt/gem/ext/hyprpaper.config.default $HYPR_PAPER_CONFIG
sudo mkdir -p $HYPR_WALLPAPERS_DIR
if [[ ! -f "$HYPR_DEFUALT_WALLPAPER" ]]; then
    sudo wget -O $HYPR_DEFUALT_WALLPAPER https://4kwallpapers.com/images/wallpapers/valley-of-fire-state-park-road-tarmac-highway-nevada-3648x5472-1096.jpg
fi

install_font() {
    if [[ ! -f "$FONTS_INSTALL_DIR/$1" ]]; then
        mkdir -p $2

        wget -O $IOSEVKA_ZIP $3

        cd $2
        unzip -o $IOSEVKA_ZIP_NAME
        sudo cp -f $2/$1 $FONTS_INSTALL_DIR
        fc-cache --force

        rm -rf $IOSEVKA_ZIP
    fi
}

echo "[gem] [hyprland] [fonts] [iosevka]"
install_font $IOSEVKA_TTC $FONTS_DIR https://github.com/be5invis/Iosevka/releases/download/v17.1.0/super-ttc-iosevka-17.1.0.zip
echo "[gem] [foot] [fonts] [iosevka glyphs]"
install_font $IOSEVKA_GLYPHS_TTC $FONTS_GLYPHS_DIR https://github.com/ryanoasis/nerd-fonts/releases/download/v2.3.3/Iosevka.zip

echo "[gem] [config] [foot]"
mkdir -p $FOOT_CONFIG_DIR
cp -f /opt/gem/ext/foot.ini $FOOT_CONFIG

echo "[gem] [config] [rofi]"
mkdir -p $ROFI_CONFIG_DIR
printf '@theme "gruvbox-dark-hard"\n' > $ROFI_CONFIG

echo "[gem] [config] [electron-flags]"
echo '--ozone-platform-hint=auto' | tee $HOME/.config/electron-flags.conf
echo '--ozone-platform=wayland' | tee $HOME/.config/electron17-flags.conf